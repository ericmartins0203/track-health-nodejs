{
    "openapi": "3.0.0",
    "info": {
        "title": "Track Health",
        "description": "This is an API Rest maked in NodeJs...",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "Description": "API of development"
        }
    ],
    "paths": {
        "/user/allergy": {
            "post": {
                "security": [{ 
                    "bearerAuth": []
                }] ,
                "tags": ["Allergy"],
                "summary": "Create a user allergy",
                "description": "Add a new allergy to user or create a new allergy. The fileds 'id' and 'description' is optional.",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object", 
                                "proprieties": {
                                    "id": {
                                        "type": "string"
                                    },
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "id": "Here some id existent Ex: wredfd-dsfDSFdsf",
                                    "name": "Camarão",
                                    "description": "Alergia a camarão detalhada, caso necessário."
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description":"Created"
                    },
                    "400": {
                        "description": "Allergy already exists."
                    },
                    "401": {
                        "description": "Missing authorization headers"
                    }

                }               
            }
        }
        
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}